$('.flash-messages').html("<%= j render "partials/flash" %>");

commentTable = $('.comments[commentable_id="<%= @commentable.id %>"][commentable_type="<%= @commentable.class %>"]');
commentContent = $('textarea#comment_content');

<% if @comment.errors.any? %>
  commentTable.after("<%= j render "partials/errors", obj: @comment %>");
<% else %>
  commentTable.prepend('<%= j render @comment %>');
  commentContent.val('');
<% end %>


