.comments{ commentable_type: commentable.class, commentable_id: commentable.id }
  = render commentable.comments
  .comment-form
    = simple_form_for [ commentable, commentable.comments.build ], remote: true do |f|
      = f.input :content, label: false, placeholder: "Add comment here"
      = f.submit "send comment", class: "btn btn-sm btn-gray quad"
