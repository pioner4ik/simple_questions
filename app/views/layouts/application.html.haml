!!!
%html
  %head
    %title SimpleQuestions
    = csrf_meta_tags 
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    .navbar.navbar-fixed-top.bg-inverse.navbar-dark
      .container
        - unless user_signed_in?
          .nav.navbar-nav.float-lg-right
            .nav-item.nav-link.active
              = link_to "New user?", new_user_registration_path(@user),
              class: "btn btn-sm btn-outline-info"
            .nav-item.nav-link.active
              = link_to "Sign in", new_user_session_path(@user),
              class: "btn btn-sm btn-info"    
        - else      
          .nav.navbar-nav.float-lg-right
            .nav-item.nav-link.active
              = link_to "Log out", destroy_user_session_path(@user),
              method: :delete, class: "btn btn-sm btn-info"
    %p.notice= notice
    %p.alert= alert

    = yield
